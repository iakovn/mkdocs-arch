{
    "name": "MkDocs Architecture Documentation",
    "dockerComposeFile": "docker-compose.yml",
    "service": "mkdocs",
    "workspaceFolder": "/workspace",
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "shd101wyy.markdown-preview-enhanced",
                "jebbs.plantuml",
                "StevenChen.vscode-adr-manager",
                "eamodio.gitlens",
                "dnut.rewrap-revived",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "plantuml.exportFormat": "svg",
                "markdown-preview-enhanced.plantumlServer": "http://plantuml:8080/svg/",
                "plantuml.diagramsRoot": "docs/diagrams/src",
                "plantuml.exportOutDir": "docs/diagrams/generated",
                "plantuml.render": "PlantUMLServer",
                "plantuml.server": "http://plantuml:8080",
                "editor.formatOnSave": true,
                "adrManager.editorMode.addAdrEditorMode": "professional",
                "adrManager.editorMode.viewAdrEditorMode": "professional"
            }
        }
    },
    "postStartCommand": "npm ci"
}