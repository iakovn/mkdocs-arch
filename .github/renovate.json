{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "dependencyDashboard": true,
  "enabledManagers": [
    "pip_requirements"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements\\.txt$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "all-pip-dependencies",
      "schedule": [
        "before 3am on monday"
      ],
      "automerge": true,
      "automergeType": "pr",
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "timezone": "UTC",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore"
}
